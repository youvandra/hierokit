{
  "name": "hierokit",
  "version": "1.0.0",
  "description": "Flow-based TypeScript toolkit for safe, production-ready transactions on Hiero/Hedera networks",
  "main": "dist/index.cjs",
  "scripts": {
    "test": "vitest run",
    "test:integration": "vitest run tests/integration/*.itest.ts",
    "build": "tsup",
    "lint": "eslint src tests",
    "format": "prettier --write .",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "hedera",
    "hiero",
    "sdk",
    "typescript",
    "transactions",
    "web3"
  ],
  "author": "youvandra",
  "license": "Apache-2.0",
  "type": "module",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/youvandra/hierokit.git"
  },
  "bugs": {
    "url": "https://github.com/youvandra/hierokit/issues"
  },
  "homepage": "https://github.com/youvandra/hierokit#readme",
  "dependencies": {
    "@hiero-ledger/sdk": "^2.80.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^25.0.0",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  }
}
